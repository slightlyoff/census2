<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" 
  backgroundColor="#FFFFFF"
  horizontalAlign="center"
  styleName="plain"
  creationComplete="initApp()"
  frameRate="99">

  <mx:Script>
  <![CDATA[
  import com.adobe.serialization.json.JSON;

  [Bindable]
  public var rows:Number;

  private var gzip:Boolean;
  private var startTime:Number;
  private var sendResult:Boolean = false;
  private var conn:LocalConnection;
  private var testResult:TestResult;

  private function initApp():void
  {
    conn = new LocalConnection();
    rows = new Number(parameters.rows);

    gzip = new Boolean(parameters.gzip);

    if (gzip)
    {
      srv.url += "&gzip=true";
    }

    testResult = new TestResult("flex_json");
    testResult.rows = rows;

    startTime = (new Date()).time;
    srv.send({command: "getJSON", rows: rows});
    srv.channelSet.messageAgents[0].addEventListener('acknowledge',loadDone);
  }
      
  private function done():void
  {
    if (sendResult)
    {
      var now:Number = new Date().time;
      testResult.renderTime = (now - startTime);
      testResult.memory = flash.system.System.totalMemory;
      conn.send("census_lc", "testDone", testResult);
    }
    sendResult = false;
  }

  private function loadDone(event:Event):void
  {
    var now:Number = new Date().time;
    testResult.transferTime = (now - startTime);
    startTime = (new Date()).time;
  }

  private function handleResult():void
  {
    var s:String = srv.lastResult.toString();
    s = s.replace(/\n/g, "");
    s = s.replace(/\r/g, "");
    sendResult = true;
    var decoded:Object = JSON.decode(s);
    g.dataProvider = decoded.items;
    var now:Number = new Date().time;
    testResult.renderTime = (now - startTime);
    startTime = (new Date()).time;
  }
  ]]>
  </mx:Script>

  <mx:HTTPService id="srv" url="servlet/CensusServiceServlet?id=flex_json" resultFormat="text" result="handleResult()"/>

  <mx:DataGrid id="g" width="100%" height="100%" updateComplete="done()"/>
    <!--
    <mx:columns>
      <mx:DataGridColumn dataField="itemId"/>
      <mx:DataGridColumn dataField="age"/>
      <mx:DataGridColumn dataField="classOfWorker"/>
      <mx:DataGridColumn dataField="education"/>
      <mx:DataGridColumn dataField="maritalStatus"/>
      <mx:DataGridColumn dataField="race"/>
      <mx:DataGridColumn dataField="sex"/>
    </mx:columns>
  </mx:DataGrid>
  -->

</mx:Application>
