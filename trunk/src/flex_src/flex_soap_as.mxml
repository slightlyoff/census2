<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
  backgroundColor="#1a1a1a"
  backgroundGradientAlphas="[1.0, 1.0]"
  backgroundGradientColors="[0x1a1a1a, 0x1a1a1a]"
  paddingTop="0"
  paddingBottom="0"
  paddingLeft="0"
  paddingRight="0"
  usePreloader="false"
  preinitialize="Font.registerFont(BaseRSL.myriadWebPro);Font.registerFont(BaseRSL.myriadWebProBold);"
  creationComplete="initApp()"
  frameRate="99">

  <mx:Metadata>
    [SWF(backgroundColor="0x1a1a1a")]
  </mx:Metadata>

  <mx:Style source="flex.css"/>

  <mx:Script>
  <![CDATA[
  import mx.core.mx_internal;

  use namespace mx_internal;
      
  [Bindable]
  public var rows:int;

  private var gzip:Boolean;
  private var startTime:Number;
  private var sendResult:Boolean = false;
  private var conn:LocalConnection;
  private var testResult:TestResult;
      
  private function initApp():void
  {
    conn = new LocalConnection();
    rows = new Number(parameters.rows);
    gzip = new Boolean(parameters.gzip);

    var url:String  = "webservices/CensusService?id=flex_soap_as";

    if (gzip)
    {
      url += "&gzip=true";
    }

    srv.endpointURI = url;

    testResult = new TestResult("flex_soap_as");
    testResult.rows = rows;
    startTime = (new Date()).time;
    sendResult = true;
    srv.getElements.send(0,rows);
  }
      
  private function done():void
  {
    if (sendResult)
    {
      var now:Number = new Date().time;
      testResult.renderTime = (now - startTime);
      testResult.memory = flash.system.System.totalMemory;
      conn.send("census_lc", "testDone", testResult);
    }
    sendResult = false;
  }

  private function loadComplete(event:Event):void
  {
    var now:Number = new Date().time;
    testResult.transferTime = (now - startTime);
    startTime = (new Date()).time;
  }

  private function handleLoad():void
  {
    srv.getElements.asyncRequest.addEventListener('acknowledge',loadComplete);
  }

  private function parseDone():void
  {
    var now:Number = new Date().time;
    testResult.parseTime = (now - startTime);
    startTime = (new Date()).time;
  }
  ]]>
  </mx:Script>

  <mx:WebService id="srv" wsdl="webservices/CensusService?wsdl" load="handleLoad()" result="parseDone()">
    <mx:operation name="getElements"/>
  </mx:WebService>
  
  <mx:DataGrid dataProvider="{srv.getElements.lastResult}" width="100%" height="100%" updateComplete="done()">
    <mx:columns>
      <mx:DataGridColumn dataField="id"/>
      <mx:DataGridColumn dataField="age"/>
      <mx:DataGridColumn dataField="classOfWorker"/>
      <mx:DataGridColumn dataField="education"/>
      <mx:DataGridColumn dataField="maritalStatus"/>
      <mx:DataGridColumn dataField="race"/>
      <mx:DataGridColumn dataField="sex"/>
    </mx:columns>
  </mx:DataGrid>
  
</mx:Application>
